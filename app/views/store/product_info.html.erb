
  <div class="entry">
  	<%= image_tag(@product.image_url) %>
  	<h3><%= @product.title %></h3>
  	<%= sanitize(@product.description) %>
  	<div class = "price_line">
  	<span class="price"><%= number_to_currency(@product.price) %></span>

  	
    <%= form_for(@product) do |f| %>
    
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity ,size: 1%>
    <%= button_to 'Ok', line_items_path(product_id: @product), remote: true%>
    
    <% end %>
  <%= button_to 'Add to Cart', line_items_path(product_id: @product),remote: true %><br/>
  	<%= button_to 'Back', products_category_path(@product.category), method: :get%>

  	</div>
  </div>
